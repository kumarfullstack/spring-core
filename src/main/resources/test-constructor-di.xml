<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">
    <!-- Constructor-Based Dependency Injection Ambiguty-->
    <bean class="com.test.di.Addition" id="addition">
        <constructor-arg name="a" value="10" type="int" index="0"/>
        <constructor-arg name="b" value="20" type="int" index="1"/>
    </bean>

    <!-- Constructor-Based Dependency Injection -->
    <bean class="com.test.di.PermanentAddress" id="permanentAddress" c:city="hyd" c:postCode="1234"/>
    <bean class="com.test.di.Address" id="address2" c:permanentAddress-ref="permanentAddress"/>

    <bean class="com.test.di.Address" id="address">
        <constructor-arg name="street">
            <value>highTech</value>
        </constructor-arg>
        <constructor-arg name="zipcode" value="450034"/>
<!--        <constructor-arg name="permanentAddress" ref="permanentAddress"/>-->
    </bean>

    <bean id="employee" class="com.test.di.Employee" p:addr-ref="address">
        <constructor-arg name="id" value="111"/>
        <property name="phoneNum">
            <list>
                <value>111111</value>
                <value>222222</value>
                <value>333333</value>
            </list>
        </property>
        <property name="address">
            <set>
                <value>hyd</value>
                <value>TL</value>
            </set>
        </property>
        <property name="departments">
            <map>
                <entry key="IT" value="Software"/>
                <entry key="Admin" value="HW"/>
            </map>
        </property>
    </bean>

</beans>