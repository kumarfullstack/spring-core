<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd
    http://www.springframework.org/schema/context
    http://www.springframework.org/schema/context/spring-context.xsd">

    <context:annotation-config/>

    <bean class="com.test.di.Employee" id="employee"
          init-method="init" destroy-method="destroy">
        <constructor-arg name="name" value="Ram"/>
        <constructor-arg name="id" value="R100"/>
    </bean>

    <bean class="com.test.di.EmployeeLifeCycleInterface" id="employee2">
        <constructor-arg name="name" value="Ram"/>
        <constructor-arg name="id" value="R100"/>
    </bean>

    <bean class="com.test.di.EmployeeLifeCycleAnnotation" id="employee3">
        <constructor-arg name="name" value="Ram"/>
        <constructor-arg name="id" value="R100"/>
    </bean>

</beans>