<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:c="http://www.springframework.org/schema/c"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans.xsd">


    <bean class="com.constructor.di.Addition" id="addition">
        <constructor-arg name="a" value="10" type="int" index="0"/>
        <constructor-arg name="b" value="20" type="int" index="1"/>
    </bean>

    <!-- Constructor-Based Dependency Injection -->
    <bean id="address" class="com.constructor.di.Address" c:city="hyd">
        <constructor-arg name="street" value="HighTechStreet"/>
    </bean>

    <bean id="employee" class="com.constructor.di.Employee">
        <constructor-arg name="id" value="123"/>
        <constructor-arg name="name" value="Ram"/>
        <constructor-arg name="addr" ref="address"/>
        <constructor-arg name="mobileNumbers">
            <list>
                <value>123456</value>
                <value>822662</value>
                <value>9762588</value>
            </list>
        </constructor-arg>

        <constructor-arg name="emails">
            <set>
                <value>abc@gmail.com</value>
                <value>zyx@gmail.com</value>
            </set>
        </constructor-arg>
        <constructor-arg name="vehicleNumbers">
            <map>
                <entry key="Bike" value="TL 02 AB3837"/>
                <entry key="Car" value="BH 02 AB3837"/>
            </map>
        </constructor-arg>
    </bean>

</beans>